# Секретный ключ вебхука от Sasha AI
WEBHOOK_SECRET=your-webhook-secret-here

# Настройки amoCRM
# Поддомен вашего аккаунта amoCRM (например, mycompany для mycompany.amocrm.ru)
AMOCRM_SUBDOMAIN=your-subdomain

# Токен доступа OAuth 2.0 для amoCRM API
AMOCRM_ACCESS_TOKEN=your-access-token-here

# ID воронки для создания сделок (обязательно)
AMOCRM_PIPELINE_ID=123456

# ID статуса в воронке (опционально, по умолчанию первый статус)
AMOCRM_STATUS_ID=

# ID кастомных полей (опциональные)
# Стандартные поля PHONE и EMAIL используются автоматически без указания ID
# Указывайте только ID кастомных полей, если они нужны

# ID полей для сделок
AMOCRM_AGREEMENTS_FIELD_ID=
AMOCRM_CLIENT_FACTS_FIELD_ID=
AMOCRM_SMS_TEXT_FIELD_ID=
AMOCRM_CALL_DURATION_FIELD_ID=
AMOCRM_CALL_STARTED_FIELD_ID=
AMOCRM_CALL_RECORD_URL_FIELD_ID=
AMOCRM_CALL_HISTORY_FIELD_ID=
AMOCRM_AGREEMENTS_TIME_FIELD_ID=
AMOCRM_REGION_FIELD_ID=
AMOCRM_COMPANY_FIELD_ID=

# ID полей для контактов
AMOCRM_CONTACT_COMPANY_FIELD_ID=
AMOCRM_CONTACT_CITY_FIELD_ID=

# Порты сервера
# Внешний порт (порт на хосте, который будет доступен извне)
PORT=3333

# Внутренний порт Docker (порт внутри контейнера, обычно совпадает с PORT)
# Используется только для Docker контейнера
CONTAINER_PORT=3333
